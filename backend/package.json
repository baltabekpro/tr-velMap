{
  "name": "travelmap-backend",
  "version": "1.0.0",
  "description": "TravelMap Kazakhstan Backend Microservices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:gateway": "node gateway.js",
    "start:places": "node services/places-service.js",
    "start:weather": "node services/weather-service.js",
    "start:map": "node services/map-service.js",
    "start:chat": "node services/chat-service.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:places\" \"npm run start:weather\" \"npm run start:map\" \"npm run start:chat\"",
    "dev:gateway": "nodemon gateway.js",
    "dev:all": "concurrently \"npm run dev:gateway\" \"nodemon services/places-service.js\" \"nodemon services/weather-service.js\" \"nodemon services/map-service.js\" \"nodemon services/chat-service.js\""
  },
  "keywords": [
    "microservices",
    "travel",
    "api"
  ],
  "author": "TravelMap Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
